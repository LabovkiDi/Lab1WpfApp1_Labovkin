        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF0F37EE" Offset="0.861"/>
            <GradientStop Color="#FF1F0563" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
